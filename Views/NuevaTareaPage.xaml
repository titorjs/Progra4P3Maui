<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso3_Disenio.Views.NuevaTareaPage"
             Title="NuevaTareaPage"
             BackgroundColor="White">
    <VerticalStackLayout Spacing="20">
        <Label Text="Nueva AsignaciÃ³n"
        FontSize="24"
        FontAttributes="Bold"
        TextColor="DarkRed"
        HorizontalOptions="CenterAndExpand"
        Margin="0,0,0,20" />
        <Label Text="Nombre:"
        TextColor="Black"
        FontSize="16"
        FontAttributes="Bold"/>
        <Entry x:Name="nombre"
        IsEnabled="True"
        IsPassword="False"
        Margin="0,0,0,10" 
               TextColor="Black"/>
        <Label Text="Estado:"
        TextColor="Black"
        FontSize="16"
        FontAttributes="Bold"/>
        <Entry x:Name="estado"
        IsPassword="False"
        Margin="0,0,0,10" 
        TextColor="Black"/>
        <Label Text="Tarea:"
        TextColor="Black"
        FontSize="16"
        FontAttributes="Bold"/>
        <Editor x:Name="tarea"
         Margin="0,0,0,10"
                TextColor="Black"/>
        <Button Text="Guardar"
        BackgroundColor="DarkRed"
        HorizontalOptions="Center"
        Clicked="OnClickGuardarTarea"
                TextColor="Black"/>
    </VerticalStackLayout>
</ContentPage>